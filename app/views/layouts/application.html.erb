<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Platters Laboratory</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbo-track': 'reload' %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>

  <body class="has-navbar-fixed-top">
    <%= render "layouts/header" %>
    <div id="flash-messages">
      <% flash.each do |message_type, message| %>
        <div class="notification is-<%= message_type == "alert" ? "danger" : "link" %>" x-data x-ref="flash" x-init="setTimeout(() => { $refs.flash.remove() }, 4500)">
          <button class="delete" @click="$refs.flash.remove()"></button>
          <% if message_type == "alert" %>
            <%= fa_icon "warning fw" %>
          <% elsif message_type == "notice" || message_type == "success" %>
            <%= fa_icon "info-circle fw" %>
          <% end %>
          <%= message %>
        </div>
      <% end %>
    </div>
    <div id="main">
      <%= yield %>
    </div>
    <%= render "layouts/footer" %>
  </body>
</html>
